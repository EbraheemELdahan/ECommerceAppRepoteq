@model ECommerceApp.Models.ApplicationUser


@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";

    
}

<h2>welcome @Model.FirstName @Model.LastName</h2>

<dl style="text-align:center">
    <dt>Profile Image</dt>

    <dd><img src="~/Images/UsersProfile/@Model.UserImg" style="border-radius:50%" width="70px" height="70px" /></dd>
    <dt>ID</dt>
    <dd>@Model.Id</dd>
    <dt>First Name</dt>
    <dd>@Model.FirstName</dd>
    <dt>Last Name</dt>
    <dd>@Model.LastName</dd>
    <dt>Company Name</dt>
    <dd>@Model.CompanyName</dd>
    <dt>Phone Number</dt>
    <dd>@Model.PhoneNumber</dd>
    <dt>Birt Date</dt>
    <dd>@Model.DaetOfBirth.ToString("dd/M/yyyy")</dd>

</dl>
<h2>YourWishLists</h2>
<table class="table table-bordered col-5" style="width:50%;margin-left:10px">
    <tr>
        <th>ProductName</th>
        <th>productPrice</th>
        <th>AddTo Cart</th>
    </tr>

    @foreach (var item in ViewBag.wishlists)
    {
        <tr id="target">
            <td>@item.Name</td>
            <td>@item.Price</td>
            <td>@Html.ActionLink("ADD TO CART","addtocart2","cart",new { id=item.ID}, new { @class = "btn btn-warning" })
           </td>
        </tr>
    }

</table>
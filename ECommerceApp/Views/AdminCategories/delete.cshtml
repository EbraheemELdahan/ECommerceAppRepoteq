@model ECommerceApp.Models.Category
@{
    ViewBag.Title = "delete";
    ViewBag.Name = "Delete Category";
    Layout = "~/Views/Shared/_layoutAdmin.cshtml";
}

@using (Html.BeginForm("delete", "AdminCategories", FormMethod.Post))
{
    @Html.AntiForgeryToken()
<div class="form-horizontal">
    <h2> are you sure you want to delete this item</h2>

    <ul>
        <li><img src="~/Images/CategoriesImages/@Model.CatName"  style="border-radius:50%" height="70px" width="70px"></li>
        <li>@Model.Name</li>
        <li>@Model.CatName</li>
    </ul>
    <input type="submit" value="Delete" class="btn btn-danger" />
</div>
}

    <script src="~/Scripts/js/owl.carousel.min.js"></script>
    <script src="~/Scripts/js/echo.min.js"></script>
    <script src="~/Scripts/js/jquery.easing-1.3.min.js"></script>
    <script src="~/Scripts/js/bootstrap-slider.min.js"></script>
